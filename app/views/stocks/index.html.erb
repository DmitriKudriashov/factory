<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th colspan="5" class = "celltab30center">N</th>
      <th colspan="5" class = "celltab100center">Stock</th>
     <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td colspan="5" class = "celltab30left"><%= stock.id %></td>
        <td colspan="5" class = "celltab100left"><%= stock.name %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Show', stock %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

