<h1>Positions</h1>

<table>
  <thead>
    <tr>
      <th colspan="2" class = "celltab30center">N</th>
      <th colspan="5" class = "celltab100center">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <th colspan="2" class = "celltab30center"> <%= position.id %></th>
        <td colspan="5" class = "celltab100center"><%= position.name %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Show', position %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Edit', edit_position_path(position) %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

