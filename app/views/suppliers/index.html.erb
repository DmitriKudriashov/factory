<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th colspan="5" class = "celltab100center">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td colspan="5" class = "celltab100left"><%= supplier.name %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Show', supplier %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

