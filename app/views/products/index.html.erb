<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th colspan="5" class = "celltab100center">name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td colspan="5" class = "celltab100left"><%= product.name %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Show', product %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

