<p id="notice"><%= notice %></p>

<h1>Model Prices</h1>

<table>
  <thead>
    <tr>
      <th colspan="5" class = "celltab100center">Model</th>
      <th colspan="5" class = "celltab100center">Category</th>
      <th colspan="5" class = "celltab100center">Description</th>
      <th colspan="5" class = "celltab50">Quantity</th>
      <th colspan="5" class = "celltab50">Unit</th>
      <th colspan="5" class = "celltab50">Unit price</th>
      <th colspan="5" class = "celltab50">Currency</th>
      <th colspan="5" class = "celltab50">Sum (cur-ry)</th>
      <th colspan="5" class = "celltab50">Rate Curry</th>
      <th colspan="5" class = "celltab50">Sum (usd)   </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modelprices.each do |modelprice| %>
      <tr>
        <td colspan="5" class = "celltab100left"><%= modelprice.modelset.number_model %>   </td>
        <td colspan="5" class = "celltab100left"><%= modelprice.category.name %>   </td>
        <td colspan="5" class = "celltab100left"><%= modelprice.description.name %></td>
        <td colspan="5" class = "celltab50right"><%= modelprice.quantty %>         </td>
        <td colspan="5" class = "celltab50left"><%= modelprice.unit.name %>       </td>
        <td colspan="5" class = "celltab50right"><%= modelprice.unit_price %>      </td>
        <td colspan="5" class = "celltab50left"><%= modelprice.currency.name %>   </td>
        <td colspan="5" class = "celltab50right"><%= modelprice.sum_curry %>       </td>
        <td colspan="5" class = "celltab50left"><%= modelprice.ratecurry.rate %>  </td>
        <td colspan="5" class = "celltab50right"><%= modelprice.sum_usd %>         </td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Show', modelprice %> </td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Edit', edit_modelprice_path(modelprice) %> </td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Destroy', modelprice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
<br>

