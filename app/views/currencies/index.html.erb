<p id="notice"><%= notice %></p>

<h1>Currencies</h1>

<table>
  <thead>
    <tr>
      <th colspan="5" class = "celltab30center">N</th>
      <th colspan="5" class = "celltab100center">Name</th>
      <th colspan="5" class = "celltab30">code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @currencies.each do |currency| %>
      <tr>
        <td colspan="5" class = "celltab30left"><%= currency.id %></td>
        <td colspan="5" class = "celltab100left"><%= currency.name %></td>
        <td colspan="5" class = "celltab30"><%= currency.curry_code %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Show', currency %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Edit', edit_currency_path(currency) %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Destroy', currency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Currency', new_currency_path %><br>
