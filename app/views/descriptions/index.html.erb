<h1>Descriptions</h1>

<table>
  <thead>
    <tr>
      <th colspan="2" class = "celltab40center">N</th>
      <th colspan="5" class = "celltab100center">Description</th>
      <th colspan="5" class = "celltab100center">Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @descriptions.each do |description| %>
      <tr>
        <td colspan="2" class = "celltab40center"><%= description.id %></td>
        <td colspan="5" class = "celltab100left"> <%= description.name %></td>
        <td colspan="5" class = "celltab100left"> <%= description.category.name %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Show', description %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Edit', edit_description_path(description) %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Destroy', description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

