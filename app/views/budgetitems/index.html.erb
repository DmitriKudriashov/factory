<h1>Budget Items</h1>

<table>
  <thead>
    <tr>
      <th colspan="5" class = "celltab100">Name</th>
      <th colspan="5" class = "celltab30">codeitem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgetitems.each do |budgetitem| %>
      <tr>
        <td colspan="5" class = "celltab100left"><%= budgetitem.name %></td>
        <td colspan="5" class = "celltab30"><%= budgetitem.codeitem %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Show', budgetitem %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Edit', edit_budgetitem_path(budgetitem) %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Destroy', budgetitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

