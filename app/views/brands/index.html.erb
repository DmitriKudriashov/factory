<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<table>
  <thead>
    <tr>
      <th colspan="3" class = "celltab20center">Id </th>
      <th colspan="5" class = "celltab60center">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td colspan="3" class = "celltab20center"><%= brand.id %></td>
        <td colspan="5" class = "celltab60center"><%= brand.name %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Show', brand %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td colspan="5" class = "s_e_d"><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

